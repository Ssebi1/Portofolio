<style>
    .selectedLanguage {
        border: 2px solid black;
    }
</style>

<div class="languageSelect">
    <% const lng = language %>
    <a href="/?lng=en" title="english">
        <div title="english" class="language english <% if(lng==='en') {%> selectedLanguage <% } %> "></div>
    </a>
    <a href="/?lng=ro" title="romanian">
        <div title="romanian" class="language romanian <% if(lng==='ro') { %> selectedLanguage <% } %> "></div>
    </a>
</div>